@model StockExchange.Web.Models.Dashboard.DashboardViewModel

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Decliners</h3>
    </div>
    <div class="box-body">
        <div class="table-responsive">
            <table id="decliners-grid" class="table table-hover table-stripe"
                        data-order='[[2, "asc"]]'
                  data-length-menu="[10, 20, 30, 40]"
                   data-page-length="10"
                   data-ordering="true"
                   data-searching="true"
                   data-auto-width="false"
                   data-scroll-collapse="true"
                   data-processing="true"
                   data-server-side="true"
                   data-ajax-url="@Url.Action("GetDeclinersTable")">
                <thead>
                    <tr>
                        <th data-column="CompanyName">@Html.DisplayNameFor(i => Model.Decliners.FirstOrDefault().CompanyName)</th>
                        <th data-column="ClosePrice">@Html.DisplayNameFor(i => Model.Decliners.FirstOrDefault().ClosePrice)</th>
                        <th data-column="Change">@Html.DisplayNameFor(i => Model.Decliners.FirstOrDefault().Change)</th>
                        <th data-column="Volume">@Html.DisplayNameFor(i => Model.Decliners.FirstOrDefault().Volume)</th>
       
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="5">
                            <span>No data found...</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>